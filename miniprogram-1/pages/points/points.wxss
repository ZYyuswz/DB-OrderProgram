/* points.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 0;
}

/* 积分余额卡片 */
.balance-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: 20rpx;
  padding: 40rpx 30rpx;
  border-radius: 20rpx;
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
}

.balance-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.balance-title {
  font-size: 32rpx;
  font-weight: 500;
  opacity: 0.9;
}

.balance-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
}

.balance-desc {
  font-size: 26rpx;
  opacity: 0.8;
  line-height: 1.4;
}

/* 积分记录区域 */
.records-section {
  margin: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

/* 积分记录列表 */
.records-list {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.record-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.record-item:last-child {
  border-bottom: none;
}

.record-item:active {
  background-color: #f8f9fa;
}

/* 记录头部 */
.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.record-type {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.type-icon {
  font-size: 28rpx;
}

.type-text {
  font-size: 28rpx;
  font-weight: 500;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.type-text.earned {
  color: #52c41a;
  background-color: #f6ffed;
}

.type-text.spent {
  color: #fa8c16;
  background-color: #fff7e6;
}

.type-text.expired {
  color: #ff4d4f;
  background-color: #fff2f0;
}

.type-text.default {
  color: #666;
  background-color: #f5f5f5;
}

.record-points {
  font-size: 32rpx;
  font-weight: bold;
}

.record-points.positive {
  color: #52c41a;
}

.record-points.negative {
  color: #ff4d4f;
}

/* 记录内容 */
.record-content {
  margin-bottom: 16rpx;
}

.record-desc {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 12rpx;
}

.record-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.detail-item {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 记录底部 */
.record-footer {
  display: flex;
  justify-content: flex-end;
}

.record-time {
  font-size: 24rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  text-align: center;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 加载更多 */
.load-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx;
  background: white;
  margin-top: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.load-more-text {
  font-size: 26rpx;
  color: #999;
}

/* 没有更多数据 */
.no-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx;
  background: white;
  margin-top: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.no-more-text {
  font-size: 26rpx;
  color: #999;
} 