/* points.wxss - 积分记录页面样式 */

/* 页面容器 */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
}

/* 积分余额卡片 */
.balance-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
  color: white;
  position: relative;
  overflow: hidden;
}

.balance-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0) 70%);
  animation: float 6s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translate(0, 0) rotate(0deg); }
  50% { transform: translate(-20rpx, -20rpx) rotate(180deg); }
}

.balance-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  position: relative;
  z-index: 2;
}

.balance-title {
  font-size: 28rpx;
  opacity: 0.9;
}

.balance-info {
  display: flex;
  align-items: baseline;
}

.balance-amount {
  font-size: 64rpx;
  font-weight: bold;
  margin-right: 8rpx;
}

.balance-unit {
  font-size: 24rpx;
  opacity: 0.8;
}

.balance-desc {
  position: relative;
  z-index: 2;
}

.balance-desc text {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 记录区域 */
.records-section {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 记录列表 */
.records-list {
  background: white;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s ease;
}

.record-item:last-child {
  border-bottom: none;
}

.record-item:active {
  background: #f8f9fa;
}

.record-info {
  flex: 1;
  margin-right: 20rpx;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.record-type {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.record-time {
  font-size: 24rpx;
  color: #999;
}

.record-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.record-details {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.store-name {
  font-size: 24rpx;
  color: #999;
}

.order-amount {
  font-size: 24rpx;
  color: #999;
}

/* 积分数值 */
.record-points {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-width: 120rpx;
}

.points-icon {
  font-size: 24rpx;
  margin-bottom: 4rpx;
}

.points-amount {
  font-size: 32rpx;
  font-weight: bold;
}

.record-points.earned {
  color: #52c41a;
}

.record-points.earned .points-icon {
  color: #52c41a;
}

.record-points.spent {
  color: #ff4d4f;
}

.record-points.spent .points-icon {
  color: #ff4d4f;
}

.record-points.expired {
  color: #faad14;
}

.record-points.expired .points-icon {
  color: #faad14;
}

.record-points.default {
  color: #666;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.empty-desc {
  display: block;
  font-size: 26rpx;
  color: #ccc;
}

/* 加载状态 */
.loading-more {
  text-align: center;
  padding: 30rpx;
}

.loading-text {
  font-size: 26rpx;
  color: #999;
}

/* 没有更多数据 */
.no-more {
  text-align: center;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.no-more-text {
  font-size: 24rpx;
  color: #ccc;
}

/* 响应式设计 */
@media screen and (max-width: 350px) {
  .container {
    padding: 16rpx;
  }
  
  .balance-card {
    padding: 30rpx;
  }
  
  .balance-amount {
    font-size: 56rpx;
  }
  
  .record-item {
    padding: 24rpx;
  }
  
  .record-points {
    min-width: 100rpx;
  }
}