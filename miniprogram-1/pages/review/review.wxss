/* review.wxss - 订单评价页面样式 */
page {
  background-color: #FFF8F3;
  height: 100%;
  overflow: hidden;
}

/* 全局背景覆盖 */
page::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #FFF8F3;
  z-index: 0;
}

/* 页面背景层 */
.page-background {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #FFF8F3;
  z-index: 0;
}

.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #FFF8F3;
  position: relative;
  z-index: 1;
}

/* 订单信息卡片 */
.order-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.order-id {
  font-size: 28rpx;
  color: #FF8C42;
  font-weight: bold;
}

.order-details {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.detail-row {
  display: flex;
  align-items: center;
}

.label {
  font-size: 28rpx;
  color: #666;
  width: 140rpx;
}

.value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.value.price {
  color: #FF8C42;
  font-weight: bold;
}

/* 评分区域 */
.rating-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  position: relative;
  z-index: 2;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.rating-text {
  font-size: 28rpx;
  color: #FF8C42;
  font-weight: bold;
}

/* 五星评分 */
.stars-container {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.stars-container.small {
  gap: 10rpx;
}

.star-item {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s;
}

.stars-container.small .star-item {
  width: 40rpx;
  height: 40rpx;
}

.star-icon {
  font-size: 50rpx;
  color: #ddd;
  transition: all 0.2s;
}

.stars-container.small .star-icon {
  font-size: 35rpx;
}

.star-item.active .star-icon {
  color: #FFD700;
  transform: scale(1.1);
}

.star-item:active {
  transform: scale(0.95);
}

.rating-desc {
  display: block;
  text-align: center;
  font-size: 26rpx;
  color: #999;
}



/* 评价内容 */
.review-content {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  position: relative;
  z-index: 2;
}

.char-count {
  font-size: 24rpx;
  color: #999;
}

.review-textarea {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #333;
  background: #fafafa;
  box-sizing: border-box;
}

.review-textarea:focus {
  border-color: #FF8C42;
  background: white;
}



/* 提交按钮 */
.submit-section {
  padding: 30rpx 0;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  transition: all 0.2s;
}

.submit-btn.active {
  background: #FF8C42;
  color: white;
}

.submit-btn.active:active {
  background: #E6753A;
  transform: scale(0.98);
}

.submit-btn.disabled {
  background: #ccc;
  color: #999;
}
