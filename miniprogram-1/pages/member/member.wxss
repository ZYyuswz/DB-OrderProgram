/* member.wxss - 会员特权页面样式 */

/* 页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(160deg, #f6f7fb 0%, #eef2f7 100%);
  padding: 24rpx;
}

/* 会员卡片 */
.member-card {
  background: #fff;
  border-radius: 28rpx;
  padding: 36rpx;
  margin-bottom: 28rpx;
  box-shadow: 0 16rpx 48rpx rgba(17, 24, 39, 0.08);
  position: relative;
  overflow: hidden;
}

.member-card::before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(45deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.3));
  border-radius: 50%;
  transform: translate(50%, -50%);
}

.member-card-accent {
  position: absolute;
  left: 0;
  top: 0;
  height: 10rpx;
  width: 100%;
}

/* 会员头部 */
.member-header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.member-level-badge {
  display: flex;
  align-items: center;
  padding: 15rpx 30rpx;
  border-radius: 50rpx;
  margin-right: 30rpx;
  position: relative;
  z-index: 2;
}

.level-icon {
  font-size: 40rpx;
  margin-right: 15rpx;
}

.level-name {
  color: white;
  font-size: 28rpx;
  font-weight: bold;
}

.member-info {
  flex: 1;
}

.member-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.member-since {
  font-size: 24rpx;
  color: #666;
}

/* 消费信息 */
.consumption-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.consumption-item {
  text-align: center;
  flex: 1;
}

.consumption-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.consumption-value {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 升级进度 */
.upgrade-progress {
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 30rpx;
  position: relative;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.progress-title {
  font-size: 28rpx;
  color: #333;
}

.progress-remaining {
  font-size: 24rpx;
  color: #FF8C42;
  font-weight: bold;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: #e9ecef;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
  position: relative;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #FF8C42, #FFB366);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-percent {
  position: absolute;
  right: 10rpx;
  top: -34rpx;
  font-size: 22rpx;
  color: #999;
}

/* 最高等级提示 */
.max-level-tip {
  text-align: center;
  padding: 30rpx;
  background: linear-gradient(135deg, #FFD700, #FFA500);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tip-icon {
  font-size: 40rpx;
  margin-right: 15rpx;
}

.tip-text {
  color: white;
  font-size: 28rpx;
  font-weight: bold;
}

/* 区域标题 */
.section-title {
  background: white;
  padding: 30rpx;
  border-radius: 20rpx 20rpx 0 0;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-title text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 会员特权 */
.privileges-section {
  margin-bottom: 30rpx;
}

.privileges-list {
  background: white;
  border-radius: 0 0 20rpx 20rpx;
}

.privilege-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.privilege-item:last-child {
  border-bottom: none;
}

.privilege-icon {
  font-size: 40rpx;
  margin-right: 25rpx;
  width: 60rpx;
  text-align: center;
}

.privilege-content {
  flex: 1;
}

.privilege-name {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.privilege-desc {
  font-size: 24rpx;
  color: #666;
}

.privilege-value {
  font-size: 26rpx;
  font-weight: 700;
  border: 2rpx solid #FF8C42;
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
}

/* 消费统计 */
.stats-section {
  margin-bottom: 30rpx;
}

.stats-grid {
  background: white;
  border-radius: 0 0 20rpx 20rpx;
  display: flex;
  flex-wrap: nowrap;
  align-items: stretch;
}

.stat-item {
  flex: 1;
  text-align: center;
  padding: 40rpx 10rpx;
  border-right: 1rpx solid #f0f0f0;
}

.stat-item:nth-child(2n) {
  /* 单行布局，不需要特殊处理 */
}

.stat-item:nth-child(n+3) {
  /* 单行布局，不需要底部分隔线 */
}

.stat-item:last-child {
  border-right: none;
}

.stat-number {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #FF8C42;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.favorite-store {
  padding: 30rpx;
  background: white;
  border-top: 1rpx solid #f0f0f0;
  text-align: center;
}

.store-label {
  font-size: 26rpx;
  color: #666;
}

.store-name {
  font-size: 26rpx;
  color: #FF8C42;
  font-weight: bold;
}

/* 会员等级体系 */
.levels-section {
  margin-bottom: 30rpx;
}

/* 横向滚动卡片样式 */
.levels-scroll {
  background: transparent;
  padding: 20rpx 0 10rpx;
}

.levels-row {
  display: flex;
  flex-direction: row;
}

.level-card {
  width: 420rpx;
  min-height: 180rpx;
  margin-right: 20rpx;
  border-radius: 20rpx;
  color: #fff;
  padding: 24rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.12);
  transform: translateZ(0);
}

.level-card:last-child {
  margin-right: 0;
}

.level-card.current {
  box-shadow: 0 16rpx 36rpx rgba(255, 140, 66, 0.35);
  position: relative;
}

.level-card-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.level-card-icon {
  font-size: 44rpx;
}

.level-chip {
  font-size: 22rpx;
  padding: 6rpx 14rpx;
  border-radius: 16rpx;
  background: rgba(0,0,0,0.25);
}

.level-card-name {
  font-size: 32rpx;
  font-weight: 700;
  margin-top: 12rpx;
}

.level-card-threshold {
  font-size: 24rpx;
  opacity: 0.9;
  margin-top: 6rpx;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 100rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 响应式设计 */
@media screen and (max-width: 350px) {
  .stats-grid {
  flex-direction: row;
  flex-wrap: nowrap;
  }
  
  .stat-item {
  min-width: auto;
  border-bottom: none;
  }
}