/* member.wxss - 会员特权页面样式 */

/* 页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
}

/* 会员卡片 */
.member-card {
  background: white;
  border-radius: 30rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
}

.member-card::before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(45deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.3));
  border-radius: 50%;
  transform: translate(50%, -50%);
}

/* 会员头部 */
.member-header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.member-level-badge {
  display: flex;
  align-items: center;
  padding: 15rpx 30rpx;
  border-radius: 50rpx;
  margin-right: 30rpx;
  position: relative;
  z-index: 2;
}

.level-icon {
  font-size: 40rpx;
  margin-right: 15rpx;
}

.level-name {
  color: white;
  font-size: 28rpx;
  font-weight: bold;
}

.member-info {
  flex: 1;
}

.member-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.member-since {
  font-size: 24rpx;
  color: #666;
}

/* 消费信息 */
.consumption-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.consumption-item {
  text-align: center;
  flex: 1;
}

.consumption-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.consumption-value {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 升级进度 */
.upgrade-progress {
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 30rpx;
  position: relative;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.progress-title {
  font-size: 28rpx;
  color: #333;
}

.progress-remaining {
  font-size: 24rpx;
  color: #FF8C42;
  font-weight: bold;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: #e9ecef;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 15rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #FF8C42, #FFB366);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-text {
  text-align: center;
  font-size: 24rpx;
  color: #666;
  display: block;
}

/* 最高等级提示 */
.max-level-tip {
  text-align: center;
  padding: 30rpx;
  background: linear-gradient(135deg, #FFD700, #FFA500);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tip-icon {
  font-size: 40rpx;
  margin-right: 15rpx;
}

.tip-text {
  color: white;
  font-size: 28rpx;
  font-weight: bold;
}

/* 区域标题 */
.section-title {
  background: white;
  padding: 30rpx;
  border-radius: 20rpx 20rpx 0 0;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-title text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 会员特权 */
.privileges-section {
  margin-bottom: 30rpx;
}

.privileges-list {
  background: white;
  border-radius: 0 0 20rpx 20rpx;
}

.privilege-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.privilege-item:last-child {
  border-bottom: none;
}

.privilege-icon {
  font-size: 40rpx;
  margin-right: 25rpx;
  width: 60rpx;
  text-align: center;
}

.privilege-content {
  flex: 1;
}

.privilege-name {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.privilege-desc {
  font-size: 24rpx;
  color: #666;
}

.privilege-value {
  font-size: 26rpx;
  color: #FF8C42;
  font-weight: bold;
}

/* 消费统计 */
.stats-section {
  margin-bottom: 30rpx;
}

.stats-grid {
  background: white;
  border-radius: 0 0 20rpx 20rpx;
  display: flex;
  flex-wrap: wrap;
}

.stat-item {
  flex: 1;
  min-width: 50%;
  text-align: center;
  padding: 40rpx 20rpx;
  border-right: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
}

.stat-item:nth-child(2n) {
  border-right: none;
}

.stat-item:nth-child(n+3) {
  border-bottom: none;
}

.stat-number {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #FF8C42;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.favorite-store {
  padding: 30rpx;
  background: white;
  border-top: 1rpx solid #f0f0f0;
  text-align: center;
}

.store-label {
  font-size: 26rpx;
  color: #666;
}

.store-name {
  font-size: 26rpx;
  color: #FF8C42;
  font-weight: bold;
}

/* 会员等级体系 */
.levels-section {
  margin-bottom: 30rpx;
}

.levels-list {
  background: white;
  border-radius: 0 0 20rpx 20rpx;
}

.level-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s ease;
}

.level-item:last-child {
  border-bottom: none;
}

.level-item:active {
  background: #f8f9fa;
}

.level-item.current {
  background: linear-gradient(90deg, rgba(255, 140, 66, 0.1), rgba(255, 179, 102, 0.1));
}

.level-badge {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 25rpx;
}

.level-item.current .level-badge {
  background: linear-gradient(135deg, #FF8C42, #FFB366);
}

.level-icon {
  font-size: 32rpx;
}

.level-item.current .level-icon {
  filter: brightness(0) invert(1);
}

.level-info {
  flex: 1;
}

.level-name {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.level-item.current .level-name {
  color: #FF8C42;
}

.level-threshold {
  font-size: 24rpx;
  color: #666;
}

.level-status {
  width: 100rpx;
  text-align: center;
}

.status-text {
  font-size: 22rpx;
  color: #FF8C42;
  font-weight: bold;
  background: rgba(255, 140, 66, 0.1);
  padding: 8rpx 15rpx;
  border-radius: 20rpx;
}

.status-icon {
  font-size: 32rpx;
  color: #52c41a;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 100rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 响应式设计 */
@media screen and (max-width: 350px) {
  .stats-grid {
    flex-direction: column;
  }
  
  .stat-item {
    min-width: 100%;
    border-right: none;
    border-bottom: 1rpx solid #f0f0f0;
  }
}