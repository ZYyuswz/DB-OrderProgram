<view class="forgot-container">
  <!-- 头部 -->
  <view class="header">
    <text class="title">找回密码</text>
    <text class="subtitle">请输入账号和手机号重置密码</text>
  </view>

  <!-- 表单区域 -->
  <view class="form-section">
    <view class="form-item">
      <text class="label">用户名</text>
      <input class="input" placeholder="请输入用户名" value="{{username}}" bindinput="onUsernameInput" />
    </view>

    <view class="form-item">
      <text class="label">手机号</text>
      <input class="input" type="number" placeholder="请输入注册手机号" value="{{phone}}" bindinput="onPhoneInput" />
    </view>

    <view class="form-item">
      <text class="label">新密码</text>
      <input class="input" type="password" placeholder="请输入新密码（至少6位）" value="{{newPassword}}" bindinput="onNewPasswordInput" />
    </view>
    
    <view class="form-item">
      <text class="label">确认密码</text>
      <input class="input" type="password" placeholder="请再次输入新密码" value="{{confirmPassword}}" bindinput="onConfirmPasswordInput" />
    </view>
  </view>

  <!-- 提交按钮 -->
  <button class="submit-btn" bindtap="handleResetPassword" loading="{{loading}}">重置密码</button>
  
  <!-- 返回登录链接 -->
  <view class="back-link">
    <text class="link" bindtap="goToLogin">返回登录</text>
  </view>
</view>