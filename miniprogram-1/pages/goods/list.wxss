  display: inline-block;
  padding: 0 8px; /* 增加水平内边距 */
  font-size: 16px; /* 增大数字字体 */
  min-width: 20px; /* 确保数字有足够空间 */
  text-align: center;
  vertical-align: top; /* 与按钮对齐 */
  line-height: 28px; /* 与按钮高度一致 */
}

