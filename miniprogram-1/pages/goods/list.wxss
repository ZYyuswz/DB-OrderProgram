/* 弹窗外层，覆盖页面其它元素 */
.dish-popup {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
}

/* 半透明遮罩 */
.popup-mask {
  position: absolute;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.45);
}

/* 弹窗主体（允许滚动） */
.popup-content {
  position: absolute;
  left: 6%;
  right: 6%;
  top: 12%;
  bottom: 12%;
  background: #fff;
  border-radius: 12px;
  padding: 16px;
  box-sizing: border-box;
  overflow-y: auto;       /* ✅ 允许内容垂直滚动 */
  -webkit-overflow-scrolling: touch; /* iOS 惯性滚动 */
}

/* 右上角关闭按钮（固定在弹窗右上） */
.close-btn {
  position: absolute;
  width: 34px;
  height: 34px;
  right: 12px;
  top: 12px;
  z-index: 10010;
}

/* 图片：等比例缩放，宽度100%，高度自适应 */
.dish-image {
  width: auto;
  height: 100%;
  max-height: 40vh;       /* 最大高度防止图片过大 */
  border-radius: 8px;
  object-fit: contain;    /* 保持比例，完整显示 */
  margin-bottom: 12px;
}

/* 名称与描述 */
.dish-info { margin-bottom: 10px; }
.dish-name { font-size: 18px; font-weight: 600; margin-bottom: 6px; display:block; }
.dish-feature { color: #666; line-height: 1.6; margin-bottom: 10px; display:block; }

/* 饮料/辣度选项区域 */
.ice-options { margin-bottom: 10px; }

/* 备注：缩小高度 */
.remark { margin-bottom: 12px; }
.remark textarea {
  width: 100%;
  min-height: 48px;       /* 缩小高度 */
  max-height: 120px;
  border: 1px solid #eee;
  padding: 8px;
  border-radius: 6px;
  box-sizing: border-box;
  resize: none;
  font-size: 14px;
  line-height: 1.4;
}

/* 底部操作按钮 */
.confirm-btn {
  width: 100%;
  height: 44px;
  line-height: 44px;
  text-align: center;
  background: #ff4d4f;
  color: #fff;
  border-radius: 8px;
  border: none;
  margin-top: 12px;
}
