/* 添加以下样式 */

/* 主容器 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

/* 内容区域 */
.content-container {
  display: flex;
  flex: 1;
  overflow: hidden;
}

/* 分类导航 */
.category-nav {
  width: 25%;
  background-color: #f8f8f8;
  height: 100%;
  z-index: 100;
}

.category-item {
  padding: 20rpx;
  font-size: 28rpx;
  text-align: center;
  border-left: 4rpx solid transparent;
  position: relative;
  color: #666;
}

.category-item.active {
  background-color: #fff;
  color: #e93b3d;
  font-weight: bold;
  border-left-color: #e93b3d;
}

.category-item.active::after {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 4rpx;
  background-color: #e93b3d;
}

/* 菜品列表 */
.goods-list {
  width: 75%;
  height: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}

/* 分类标题 */
.category-title {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
  font-size: 40rpx;
  font-weight: bold;
  display: flex;
  flex-direction: column;
}

.category-desc {
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
  margin-top: 8rpx;
}

.small-text {
  font-size: 28rpx;  /* 调小字体，默认一般为28-32rpx */
  color: #666;       /* 可选：浅色字体更显简洁 */
  line-height: 1.4;  /* 合适的行高 */
}


