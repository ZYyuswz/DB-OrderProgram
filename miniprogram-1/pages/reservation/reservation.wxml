<view class="container reservation-page">
  <!-- 顶部信息 -->
  <view class="page-header">
    <view class="title">预定座位</view>
    <view class="subtitle">提前预定，安心用餐</view>
  </view>

  <!-- 店铺与时间 -->
  <view class="card">
    <view class="card-title">店铺与时间</view>
    <view class="field">
      <text class="field-label">店铺</text>
      <picker mode="selector" range="{{shops}}" value="{{shopIndex}}" bindchange="onShopChange">
        <view class="field-control picker-display">{{shops[shopIndex]}}</view>
      </picker>
    </view>
    <view class="field grid-2">
      <view class="field-item">
        <text class="field-label">日期</text>
        <picker mode="date" value="{{date}}" start="{{startDate}}" end="{{endDate}}" bindchange="onDateChange">
          <view class="field-control picker-display">{{date}}</view>
        </picker>
      </view>
      <view class="field-item">
        <text class="field-label">时段</text>
        <picker mode="selector" range="{{timeSlots}}" value="{{timeIndex}}" bindchange="onTimeChange">
          <view class="field-control picker-display">{{timeSlots[timeIndex]}}</view>
        </picker>
      </view>
    </view>
    <view class="field grid-2">
      <view class="field-item">
        <text class="field-label">时长</text>
        <picker mode="selector" range="{{durationSlots}}" value="{{durationIndex}}" bindchange="onDurationChange">
          <view class="field-control picker-display">{{durationSlots[durationIndex]}} 分钟</view>
        </picker>
      </view>
      <view class="field-item">
        <text class="field-label">人数</text>
        <picker mode="selector" range="{{peopleNumbers}}" value="{{peopleIndex}}" bindchange="onPeopleChange">
          <view class="field-control picker-display">{{peopleNumbers[peopleIndex]}}</view>
        </picker>
      </view>
    </view>
  </view>

  <!-- 联系人信息 -->
  <view class="card">
    <view class="card-title">联系人</view>
    <view class="field">
      <text class="field-label">姓名</text>
      <input class="text-input field-control" type="text" placeholder="请输入姓名" value="{{name}}" bindinput="onNameInput" />
    </view>
    <view class="field">
      <text class="field-label">手机号</text>
      <input class="text-input field-control" type="number" maxlength="11" placeholder="请输入手机号" value="{{phone}}" bindinput="onPhoneInput" />
    </view>
  </view>

  <!-- 备注 -->
  <view class="card">
    <view class="card-title">备注</view>
    <textarea class="textarea-input field-control" placeholder="如有过敏或特殊需求可备注" value="{{remark}}" bindinput="onRemarkInput"></textarea>
  </view>

  <!-- 底部提交 -->
  <view class="fixed-submit">
    <button class="btn-primary" type="primary" bindtap="onSubmit">提交预定</button>
  </view>
</view>
