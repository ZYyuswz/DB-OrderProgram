.profile-container {
  min-height: 100vh;
  background-color: #f8f9fa;
  padding: 20rpx;
}

/* 头像区域 */
.avatar-section {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.avatar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  border: 2rpx solid #eee;
}

.change-avatar {
  color: #FF8C42;
  font-size: 28rpx;
}

/* 表单区域 */
.form-section {
  background: white;
  border-radius: 16rpx;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 140rpx;
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.input {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  text-align: right;
  padding: 10rpx 0;
}

.input::placeholder {
  color: #999;
}

.value {
  flex: 1;
  font-size: 32rpx;
  color: #666;
  text-align: right;
}

.member-level {
  color: #FF8C42;
  font-weight: 500;
}

/* 操作按钮 */
.action-buttons {
  padding: 0 20rpx;
}

.save-btn {
  background: #FF8C42;
  color: white;
  border-radius: 50rpx;
  margin-bottom: 20rpx;
  font-size: 32rpx;
}

.save-btn[disabled] {
  background: #ccc;
}

.logout-btn {
  background: #ff4757;
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
}