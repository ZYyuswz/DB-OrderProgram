/**index.wxss**/
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 桌台信息卡片 */
.table-info-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  margin-bottom: 30rpx;
  text-align: center;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.card-content {
  /* 内容样式 */
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-row:last-of-type {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.value {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

/* 开发组参考说明 */
.dev-note {
  margin-top: 30rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border-left: 6rpx solid #007bff;
}

.note-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #007bff;
  margin-bottom: 15rpx;
}

.note-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.note-item {
  display: block;
  font-size: 24rpx;
  color: #888;
  margin-bottom: 8rpx;
  padding-left: 20rpx;
}

/* 二维码提示 */
.qr-tip {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.tip-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.tip-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.tip-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 占位内容 */
.placeholder {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}
