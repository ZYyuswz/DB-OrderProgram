/* login.wxss */
page {
  background: linear-gradient(135deg, #FF8C42, #FFB366);
  min-height: 100vh;
}

.login-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 60rpx 40rpx 40rpx;
  box-sizing: border-box;
}

/* Logo和标题区域 */
.header-section {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 60rpx;
}

.logo-area {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.app-title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 15rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.app-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
}

/* 登录表单 */
.form-section {
  flex: 2;
  display: flex;
  justify-content: center;
}

.form-card {
  width: 100%;
  max-width: 600rpx;
  background: white;
  border-radius: 30rpx;
  padding: 60rpx 50rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
}

.form-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 50rpx;
}

/* 输入框样式 */
.input-group {
  display: flex;
  align-items: center;
  background: #FFF8F3;
  border-radius: 25rpx;
  margin-bottom: 30rpx;
  padding: 0 30rpx;
  height: 100rpx;
  border: 2rpx solid #FFE5D1;
}

.input-label {
  margin-right: 20rpx;
}

.input-icon {
  font-size: 32rpx;
  color: #FF8C42;
}

.input-field {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  height: 100%;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #FF8C42, #FFB366);
  color: white;
  border: none;
  border-radius: 25rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin: 40rpx 0;
  box-shadow: 0 8rpx 20rpx rgba(255, 140, 66, 0.3);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(255, 140, 66, 0.4);
}

.login-btn.loading {
  background: #ccc;
  transform: none;
  box-shadow: none;
}

.login-btn:disabled {
  background: #ccc;
  transform: none;
  box-shadow: none;
}

/* 功能链接 */
.form-links {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.link-text {
  font-size: 26rpx;
  color: #FF8C42;
  text-decoration: underline;
}

.link-text:active {
  opacity: 0.7;
  color: #E67B26;
}

/* 底部信息 */
.footer-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 60rpx;
}

.footer-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 10rpx;
}

/* 演示账户提示 */
.demo-tips {
  position: fixed;
  bottom: 40rpx;
  left: 40rpx;
  right: 40rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 20rpx;
  backdrop-filter: blur(10rpx);
}

.tips-title {
  display: block;
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.tips-text {
  display: block;
  font-size: 22rpx;
  color: #666;
  margin-bottom: 5rpx;
} 