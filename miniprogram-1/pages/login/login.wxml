<!--login.wxml-->
<view class="login-container">
  <!-- Logo和标题区域 -->
  <view class="header-section">
    <view class="logo-area">
      <text class="logo-icon">🍽️</text>
      <text class="app-title">美食外卖</text>
      <text class="app-subtitle">发现美食，享受便捷点餐体验</text>
    </view>
  </view>

  <!-- 登录表单 -->
  <view class="form-section">
    <view class="form-card">
      <view class="form-title">账户登录</view>
      
      <!-- 用户名输入框 -->
      <view class="input-group">
        <view class="input-label">
          <text class="input-icon">👤</text>
        </view>
        <input 
          class="input-field" 
          type="text" 
          placeholder="请输入用户名" 
          value="{{username}}"
          bindinput="onUsernameInput"
          maxlength="20"
        />
      </view>

      <!-- 密码输入框 -->
      <view class="input-group">
        <view class="input-label">
          <text class="input-icon">🔒</text>
        </view>
        <input 
          class="input-field" 
          type="password" 
          placeholder="请输入密码" 
          value="{{password}}"
          bindinput="onPasswordInput"
          maxlength="20"
        />
      </view>

      <!-- 登录按钮 -->
      <button 
        class="login-btn {{loading ? 'loading' : ''}}" 
        bindtap="handleLogin"
        disabled="{{loading}}"
      >
        <text wx:if="{{!loading}}">登录</text>
        <text wx:else>登录中...</text>
      </button>

      <!-- 功能链接 -->
      <view class="register-link">
        <text>没有账号？</text>
        <text class="link" bindtap="goToRegister">立即注册</text>
      </view>
    </view>
  </view>

  <!-- 底部信息 -->
  <view class="footer-section">
    <text class="footer-text">美食外卖平台</text>
    <text class="footer-text">数据库课程设计项目</text>
  </view>

  <!-- 演示账户提示 -->
  <view class="demo-tips">
    <text class="tips-title">演示账户：</text>
    <text class="tips-text">管理员：admin / 123456</text>
    <text class="tips-text">普通用户：user / 123456</text>
    <text class="tips-text">测试用户：test / 123456</text>
  </view>
</view> 