/* pages/payment/order-success.wxss */
.container {
  padding: 15px;
  min-height: 100vh;
  /* 为底部付款栏留出空间 */
  padding-bottom: 80px; 
}


/* 商品滚动区域 */
.order-scroll {
  /* 设置一个最大高度，超出则滚动 */
  max-height: 40vh; 
  padding: 15px;
  box-sizing: border-box;
  height: 30vh;
  gap: 20rpx;
}

.order-item {
  display: flex;
  align-items: center;
  margin-bottom: 15px;
}

.order-item:last-child {
  margin-bottom: 0;
}

.dish-pic {
  width: 50px;
  height: 50px;
  border-radius: 5px;
  margin-right: 10px;
  flex-shrink: 0;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.dish-info .name {
  font-size: 15px;
  color: #333;
}


.dish-info .special-request {
  font-size: 14px;
  color: #999;
  margin-top: 4px;
}
.quantity {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.price {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.success-text {
  font-size: 28px;
  font-weight: bold;
  margin-top: 10rpx;
}
.price-text{
  font-size: 20px;
  font-weight: bold;
}
.final-price {
  font-size: 20px;
  font-weight: bold;
  color: #ff4d4f;
}

.btn-group {
  display: flex;
  gap: 20rpx;
}
